<script type="text/javascript">
    $(function(){
        var submit = $("#submit");
        $("#terms").change(function(){
            var that = $(this);
            that.prop("checked",that.prop("checked"));
            if(that.prop("checked")){
                submit.prop("disabled",false)
            }else{
                submit.prop("disabled",true)
            }
        });
    });
</script>

